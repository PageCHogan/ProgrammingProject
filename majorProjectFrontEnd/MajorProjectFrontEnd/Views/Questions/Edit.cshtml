@model MajorProjectFrontEnd.Models.QuestionDataModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>QuestionDataModel</h4>
<p>@ViewData["Question"]</p>
<hr />
<div class="row">
    <div class="col-md-4">
	    <form asp-action="Edit">
	    	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	    	<div class="form-group">
	    		<label asp-for="QuestionNumber" class="control-label"></label>
	    		<input asp-for="QuestionNumber" type="number" class="form-control" value="@Model.QuestionNumber" required min="1" />
	    		<span asp-validation-for="QuestionNumber" class="text-danger"></span>
	    	</div>
	    	<div class="form-group">
	    		<label asp-for="SurveyID" class="control-label"></label>
	    		<input asp-for="SurveyID" type="number" class="form-control" value="@Model.SurveyID" required min="1" />
	    		<span asp-validation-for="SurveyID" class="text-danger"></span>
	    	</div>
	    	<div class="form-group">
	    		<label asp-for="Question" class="control-label"></label>
	    		<input asp-for="Question" class="form-control" value="@Model.Question" required spellcheck="true"/>
	    		<span asp-validation-for="Question" class="text-danger"></span>
	    	</div>
	    	<div class="form-group">
	    		<label asp-for="Type" class="control-label"></label>
	    		<select asp-for="Type">
	    			<option value="MQ">Multiple choice (MQ)</option>
	    			<option value="RANGE">RANGE</option>
	    			<option value="NI">Number input (NI)</option>
	    			<option value="COMMENT">Comment text area (COMMENT)</option>
	    			<option value="TEXT">Single line text (TEXT)</option>
	    			<option value="RANK">RANK</option>
	    		</select>
	    		<span asp-validation-for="Type" class="text-danger"></span>
	    	</div>
	    	<p>Options format examples:</p>
	    	<p class="bold">MQ:</p>
	    	<p>Yes, No, Maybe, Prefer not to say</p>
	    	<p class="bold">RANGE:</p>
	    	<p>Easy, Hard, 5</p>
	    	<p>(1 = Easy 5 = Hard)</p>
	    	<div class="form-group">
	    		<label asp-for="Options" class="control-label"></label>
	    		<input asp-for="Options" class="form-control" value="@Model.Options" required />
	    		<span asp-validation-for="Options" class="text-danger"></span>
	    	</div>
	    	<div class="form-group">
	    		<input type="submit" value="Save" class="btn btn-default submit" />
	    	</div>
	    </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

